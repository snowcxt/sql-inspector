{
    "version": "1.5.0-beta",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "sourceMap": true
    },
    "filesGlob": [
        "./**/*.ts",
        "./**/*.tsx",
        "!./node_modules/**/*"
    ],
    "files": [
        "./client/tree-builder.ts",
        "./global.d.ts",
        "./server/DbLogs.ts",
        "./server/database.ts",
        "./typings/async.d.ts",
        "./typings/codemirror.d.ts",
        "./typings/jquery.d.ts",
        "./typings/lodash.d.ts",
        "./typings/react/react-addons.d.ts",
        "./typings/react/react.d.ts",
        "./typings/tsd.d.ts",
        "./client/SqlStatement.tsx",
        "./client/TreeNode.tsx",
        "./client/index.tsx"
    ]
}
